{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "C en espaÃ±ol",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#types"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#keywords"
		},

		{
			"include": "#operators"
		}

	],

	"repository": {
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.ce",
				"match": "[1-9]\\d*"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.ce",
				"match": "\\b(si|mientras|retorno|sino)\\b"
			}]
		},
		"comments": {
			"name": "comment.ce",
			"begin": "/\\*",
			"end": "\\*/",
			"patterns": [
				{
					"name": "comment.character.escape.ce",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.ce",
					"match": "\\b(sin_tipo|entero)\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.ce",
					"match": "\\+|-|/|\\*|>=|>|<=|<|==|!="
				}
			]
		},
		"functions": {
			"patterns": [{
				"name": "entity.name.function.ce",
				"begin": "([a-zA-Z]+)\\(",
				"end": "\\)",
				"patterns": [{"include": "#numbers"}, {"include": "#types"}, {"include": "#parameters"}]
				

			}]
		},
		"parameters": {
			"patterns": [{
				"name": "variable.parameter",
				"match": "[a-z]+"
			}]
		}
	},
	"scopeName": "source.ce"
}